<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nuwc.userloginsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".initialScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".savedUsers"
            android:label="@string/app_name" />
        <activity
            android:name=".signIn"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".newUser"
            android:label="@string/app_name" />
        <activity
            android:name=".checkoutBarcode"
            android:exported="true" />
        <activity
            android:name=".equipmentCheckout"
            android:exported="true" />
        <activity
            android:name=".Reservations"
            android:label="@string/title_activity_reservations"
            android:theme="@style/AppTheme" />

        <activity android:name=".checkoutOptions" />
        <activity android:name=".equipmentCheckin" />
        <activity android:name=".checkinBarcode" />
        <activity android:name=".addEquipment" />
        <activity android:name=".adminCheckout" />
        <activity
            android:name=".PickReservationType"
            android:label="title_activity_pick_reservation_type"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BreakoutReservation"
            android:label="title_activity_breakout_reservation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".scannerScreen"
            android:label="@string/title_activity_scanner_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".reserveOptionsPrint"
            android:label="@string/app_name" />
    </application>

</manifest>