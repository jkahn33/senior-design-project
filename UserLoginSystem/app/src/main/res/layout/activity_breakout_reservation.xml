<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakoutReservation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/printName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Name of Event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.782"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/badgeID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp"
            android:hint="Employee Extension"
            app:layout_constraintBottom_toTopOf="@+id/details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.782"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/startsAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="20dp"
            android:text="Starts at"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/startsTimeHour"
            app:layout_constraintTop_toTopOf="@+id/startsTimeHour" />

        <Button
            android:id="@+id/submitRes"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="850dp"
            android:layout_marginEnd="120dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/printName" />

        <Button
            android:id="@+id/btnBreakoutCancel"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="848dp"
            android:layout_marginEnd="120dp"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/printName" />

        <EditText
            android:id="@+id/details"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:hint="Print details..."
            app:layout_constraintBottom_toTopOf="@+id/submitRes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/endsDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:hint="Ends Date"
            app:layout_constraintBottom_toTopOf="@+id/badgeID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.782"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/guestNumber"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:hint="Number of guests"
            app:layout_constraintBottom_toTopOf="@+id/submitRes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/startsDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="216dp"
            android:hint="Starts Date"
            app:layout_constraintBottom_toTopOf="@+id/endsDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.782"
            app:layout_constraintStart_toStartOf="parent" />


        <NumberPicker
            android:id="@+id/endsTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="420dp"
            android:layout_marginTop="8dp"
            android:text="Print"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startsDate" />

        <NumberPicker
            android:id="@+id/endsTimeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Print"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/endsTimeHour"
            app:layout_constraintTop_toTopOf="@+id/endsTimeHour" />

        <NumberPicker
            android:id="@+id/startsTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="424dp"
            android:layout_marginBottom="64dp"
            android:text="Print"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/startsDate"
            app:layout_constraintStart_toStartOf="parent" />

        <NumberPicker
            android:id="@+id/startsTimeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:text="Print"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/startsDate"
            app:layout_constraintStart_toEndOf="@+id/startsTimeHour"
            app:layout_constraintTop_toTopOf="@+id/startsTimeHour"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/endsAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="8dp"
            android:text="Ends at"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/endsTimeHour"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/endsTimeHour" />

        <TextView
            android:id="@+id/endsAt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="On"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/startsDate"
            app:layout_constraintHorizontal_bias="0.982"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/startsDate" />

        <TextView
            android:id="@+id/endsAt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text=":"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toEndOf="@+id/endsTimeHour"
            app:layout_constraintTop_toTopOf="@+id/endsTimeHour" />

        <TextView
            android:id="@+id/endsAt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:text=":"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toEndOf="@+id/startsTimeHour"
            app:layout_constraintTop_toTopOf="@+id/startsTimeHour" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="323dp"
            android:layout_height="320dp"
            android:layout_marginEnd="416dp"
            android:layout_marginBottom="632dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:id="@+id/timeSlots"
            android:layout_width="320dp"
            android:layout_height="630dp"
            android:layout_marginEnd="372dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="319dp">

            </LinearLayout>
        </ScrollView>

        <CheckBox
            android:id="@+id/roomA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="320dp"
            android:text="Room A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/printName" />

        <CheckBox
            android:id="@+id/roomB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Room B"
            app:layout_constraintEnd_toStartOf="@+id/roomC"
            app:layout_constraintStart_toEndOf="@+id/roomA"
            app:layout_constraintTop_toBottomOf="@+id/printName" />

        <CheckBox
            android:id="@+id/roomC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            android:text="Room C"
            app:layout_constraintStart_toEndOf="@+id/roomA"
            app:layout_constraintTop_toBottomOf="@+id/printName" />

        <CheckBox
            android:id="@+id/roomD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Room D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/roomB"
            app:layout_constraintTop_toBottomOf="@+id/printName" />

        <Button
            android:id="@+id/btnBreakoutHome"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="70dp"
            android:text="Back"
            app:layout_constraintEnd_toStartOf="@+id/endsAt7"
            app:layout_constraintStart_toEndOf="@+id/timeSlots"
            app:layout_constraintTop_toBottomOf="@+id/startsAt" />

        <TextView
            android:id="@+id/txtBreakoutSuccess"
            android:layout_width="523dp"
            android:layout_height="59dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="7dp"
            android:text="Successfully reserved room."
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/roomA"
            app:layout_constraintEnd_toStartOf="@+id/roomA"
            app:layout_constraintStart_toEndOf="@+id/calendarView"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>