<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipmentCheckin">

    <Button
        android:id="@+id/scanButton2"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="134dp"
        android:text="Scan barcode"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualButton2" />

    <Button
        android:id="@+id/manualButton2"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="50dp"
        android:text="Enter manually"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/scanButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionText2" />

    <TextView
        android:id="@+id/optionText2"
        android:layout_width="538dp"
        android:layout_height="63dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="58dp"
        android:text="Choose the following option"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/manualButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>