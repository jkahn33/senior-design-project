<Window x:Class="USWRIC_Admin_Application.RemoveUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USWRIC_Admin_Application"
        mc:Ignorable="d"
        Title="Remove User" Height="450" Width="800">
    <Grid>
        <Label Content="Remove User" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="316,50,0,0" VerticalAlignment="Top" Height="35" Width="160" FontFamily="Arial Black" FontSize="20"/>
        <TextBox x:Name="txtRemoveUserId"  HorizontalAlignment="Left" Height="23" Margin="246,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304"/>
        <Label Content="Badge Id" HorizontalAlignment="Left" Margin="246,161,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.639,-0.314"/>
        <Button x:Name="btnRemoveUserSubmit" Content="Submit" HorizontalAlignment="Left" Margin="246,317,0,0" VerticalAlignment="Top" Width="75" Click="BtnRemoveUserSubmit_Click"/>
        <Button x:Name="btnRemoveUserCancel" Content="Cancel" HorizontalAlignment="Left" Margin="475,316,0,0" VerticalAlignment="Top" Width="75" Click="BtnRemoveUserCancel_Click"/>

    </Grid>
</Window>
